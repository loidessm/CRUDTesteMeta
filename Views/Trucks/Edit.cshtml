@model CRUDTesteMeta.Models.Trucks

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Trucks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TruckId" class="control-label"></label>
                <input asp-for="TruckId" class="form-control" />
                <span asp-validation-for="TruckId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrukModel" class="control-label"></label>
                <select name="TrukModel" class="form-control" asp-for="TrukModel">
                    <option>FH</option>
                    <option>FM</option>
                </select>
                <span asp-validation-for="TrukModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrukModelYear" class="control-label"></label>
                <select name="TrukModelYear" class="form-control" asp-for="TrukModelYear">
                    @for (var i = 0; i < 1; i++)
                    {
                        <option>@(DateTime.Now.AddYears(i).Year)</option>
                    }
                </select>
                <span asp-validation-for="TrukModelYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrukManufacturingYear" class="control-label"></label>
                <select name="TrukManufacturingYear" class="form-control" asp-for="TrukManufacturingYear">
                    @for (var i = 0; i < 2; i++)
                    {
                        <option>@(DateTime.Now.AddYears(i).Year)</option>
                    }
                </select>
                <span asp-validation-for="TrukManufacturingYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
